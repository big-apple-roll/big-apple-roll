---
layout: layout.html
---
<h1>{{ page.title }}</h1>
<h2>{{ page.day | date: '%A, %B %e' }} @ {{ page.time }}</h2>

<dl class="schedule-item-info">
  {% if page.start %}
    <dt>Start</dt>
    <dd>{{ page.start }}</dd>
  {% endif %}
  {% if page.end %}
    <dt>End</dt>
    <dd>{{ page.end }}</dd>
  {% endif %}
  {% if page.leader %}
    <dt>Leader</dt>
    <dd>{{ page.leader }}</dd>
  {% endif %}
  {% if page.distance %}
    <dt>Distance</dt>
    <dd>{{ page.distance }}</dd>
  {% endif %}
  {% if page.highlights %}
    <dt>Highlights</dt>
    <dd>{{ page.highlights }}</dd>
  {% endif %}
</dl>
