<a
  class="button {% if include.size %} button--{{include.size}}Size{% endif %} {% if include.theme %}button--{{include.theme}}Theme{% endif %}"
  href="{{ include.href }}"
>
  {% if include.left_content %}
    <div class="button-left_content">
      {{ include.left_content }}
    </div>
  {% endif %}
  <div class="button-content">
    {{ include.content | default: include.href }}
  </div>
</a>
